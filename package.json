{
  "name": "Grammar-Ninja",
  "version": "0.1.0",
  "description": "Grammar ninja is the story of a robot on its way to become the greatest grammar ninja in the world. Its story begins at its humble beginnings learning to spell.",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "splatjs": "^2.3.0"
  },
  "devDependencies": {
    "browserify": "^4.1.8",
    "jshint": "^2.5.1",
    "qunitjs": "^1.17.1",
    "tabris": "0.9.3"
  },
  "scripts": {
    "lint-js": "bash -c \"jshint game.js\"",
    "build-js": "browserify game.js -o index.js",
    "build": "npm run lint-js && npm run build-js"
  },
  "author": "Anthony Quisenberry <anthony.quisenberry01@gmail.com> (http://anthonyquisenberry.com)",
  "license": "MIT",
  "jshintConfig": {
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "indent": 4,
    "latedef": "nofunc",
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "double",
    "unused": "strict",
    "trailing": true,
    "browser": true,
    "devel": true,
    "globalstrict": true,
    "globals": {
      "module": false,
      "require": false
    }
  }
}
